<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_inicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".InicioActivity"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibMundoMagico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mundo_magico96x96px"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"/>

            <ImageButton
                android:id="@+id/ibMundoMayorista"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mundo_mayorista96x96px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibMundoCosmetico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mundo_cosmetico96x96px"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"/>

            <ImageButton
                android:id="@+id/ibBeautyPro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/beauty_pro96x96px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/ibShoppers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/logo_shoppers96x96px"
                android:layout_weight="1"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"/>

            <ImageButton
                android:id="@+id/ibShoppersOnLine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shoppers_linea96x96px"
                android:layout_weight="1"
                android:layout_marginBottom="50dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_forco96x96px"/>

    </LinearLayout>
</ScrollView>