<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_ventas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".VentasActivity">

        <TextView
            android:id="@+id/tvEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Empresa"
            android:gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/bVentasDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ventas del día"
            android:layout_below="@+id/tvEmpresa"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light"/>

        <Button
            android:id="@+id/bArticulosMasVendidosDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artículos más vendidos del día"
            android:layout_below="@+id/bVentasDia"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/bArticulosMasVendidosMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artículos mas vendidos del mes"
            android:layout_below="@+id/bArticulosMasVendidosDia"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/bArticulosMasVendidosAnio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artículos más vendidos del año"
            android:layout_below="@+id/bArticulosMasVendidosMes"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/bArticulosCeroVentaMensul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artículos cero venta mensual"
            android:layout_below="@+id/bArticulosMasVendidosAnio"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/bArticulosCeroVentaAnual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artículos cero venta anual"
            android:layout_below="@+id/bArticulosCeroVentaMensul"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light" />
    </RelativeLayout>
</ScrollView>